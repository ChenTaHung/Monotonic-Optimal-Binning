# Core top-level files
include README.md
include LICENSE
include pyproject.toml
include requirements.txt
include setup.cfg

# Package source (src/ layout)
recursive-include src *.py

# Documentation
recursive-include docs *.md
recursive-include doc/charts *.png

# Data files
recursive-include data *.csv

# Tests
recursive-include tests *.py

# Exclude unnecessary files
prune .git
prune .github
prune .venv
prune venv
prune build
prune dist
prune .pytest_cache
prune .mypy_cache
prune .idea
prune .vscode
prune __pycache__

# Exclude compiled and cache files globally
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude *~
global-exclude *.swp
global-exclude *.bak